---
import { useTranslations } from "../utils/translations"

const {lang} = Astro.props
const t = useTranslations(lang)
---

<leftSide class="animate-fadeIn">
  <header
    class="flex flex-col items-center justify-center min-h-screen px-4 pt-20 pb-10 text-center h-full
        xl:text-8xl lg:text-6xl text-6xl
        2xl:text-9xl
        text-white opacity-85 transition-all duration-400"
  >
    <headerTitle class="font-syne">
      <h1>Christian</h1>
      <h1 class="lg:ps-24">Rodrigo</h1>
      <subTitle
        class="xl:text-3xl text-2xl pt-4 flex gap-2 justify-center lg:ps-1"
      >
        <h1 class="port-color">{t("header.role1")}</h1>
        <h1>{t("header.role2")}</h1>
      </subTitle>
      <h3
        class="xl:text-lg text-base mt-2 opacity-80 text-center lg:me-3 xl:pe-0 xl:me-0 xl:ps-1.5"
      >
        {t("header.subtitle")}
      </h3>
    </headerTitle>
    <div
      class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8 text-base font-medium"
    >
      <a
        href="https://mail.google.com/mail/?view=cm&fs=1&to=christian3884@gmail.com&su=Hola%20Christian%20-%20Contacto%20desde%20tu%20portfolio"
        class="btn-download text-white border-2 px-8 py-3 rounded-full transition-all duration-300 flex items-center gap-2 shadow-lg"
        target="_blank"
        rel="noopener noreferrer"
        onclick="this.style.opacity='0.7'; setTimeout(() => this.style.opacity='1', 2000);"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path
            d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
          ></path>
          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
          ></path>
        </svg>
        {t("header.getInTouch")}</a
      >

      <button
        onclick="descargarCV()"
        class="bg-port-color hover:bg-port-color cursor-pointer hover:shadow-[0_0_15px_rgba(255,255,255,0.7)] text-gray-900 px-8 py-3 rounded-full transition-all duration-300 flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
        {t("header.downloadCV")}
      </button>
    </div>
  </header>
</leftSide>

<script is:inline>
  function descargarCV() {
    const link = document.createElement("a");
    link.href = "/assets/Christian-CV-English.pdf";
    link.download = "Christian-CV-English.pdf";
    link.click();
  }
</script>
