---
import { Image } from "astro:assets";
import { useTranslations } from "../utils/translations";

const { img, icons, slug, type, lang } = Astro.props;
const projectPath = type === 'job' ? `/${lang}/projects/job/${slug}` : `/${lang}/projects/personal/${slug}`;
const t = useTranslations(lang)
---

<div class="w-full md:w-1/3 py-2 px-16">
  <div class="bg-black border border-gray-800 rounded-xl overflow-hidden hover:border-gray-600 transition-all duration-300 hover:shadow-lg hover:shadow-gray-900/20 group">
    <a href={projectPath} class="block">
      <div class="relative h-48 overflow-hidden">
        <Image
          transition:name={`img-${slug}`}
          src={img}
          alt={"Imagen principal del proyecto"}
          width={1}
          height={1}
          class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute inset-0 bg-black/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>
      
      <div class="p-6">
        <h2 
          transition:name={`title-${slug}`} 
          class="text-xl font-semibold text-white mb-3 group-hover:text-gray-100 transition-colors duration-200"
        >
          {t(`work.${slug}.title`)}
        </h2>
        <p class="text-gray-400 leading-relaxed font-light">
          {t(`work.${slug}.description`)}
        </p>
        <div class="flex w-full justify-center gap-6 pt-6 text-2xl opacity-90">
          {icons.map((icon: string) => (
            <i class={icon} transition:name={`icon-${icon + slug}`} ></i>
          ))}
        </div>
      </div>
    </a>
  </div>
</div>