---
import { getCollection } from "astro:content";

const jobProjects = await getCollection("jobProjects");
---

<div class="text-center text-white py-4 font-syne">
  <h2 class="text-xl font-semibold pt-2 pb-6">Other Jobs Work</h2>
  {
    jobProjects.map((project) => {
      const { slug, data } = project;
      const { title, img, description } = data;

      return (
        <div class="py-4 flex justify-evenly">
          <a href={`/projects/${slug}`}>
            <img transition:name={`img-${slug}`} src={img} alt="asd" width="250px" class="rounded-xl" />
          </a>

          <div>
            <h2 transition:name={`title-${slug}`} class="text-xl pb-6">{title}</h2>
            <h3 >{description}</h3>
          </div>
        </div>
      );
    })
  }
</div>
